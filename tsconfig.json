{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noUnusedLocals": false, // ! Turn this back on later
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist/",
    "declaration": true
  },
  "include": [
    "src/*"  ]
}